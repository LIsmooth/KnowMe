<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.leif.knowme.mapper.TodoMapper">

    <select id="getTodosByUserId" resultType="TodoDo">
        select *
        from t_todo
        where user_id = #{0}
    </select>

    <select id="generateSchedule" resultType="TodoDo">
        select * from t_todo where user_id=#{userId} order by created;
    </select>


    <update id="updateTodo" parameterType="TodoDo">
        update t_todo
        set event_msg=#{event_msg},
            plan_consumed = #{planConsumed}
        where todo_id = #{todoId}
    </update>
    <insert id="createTodo" parameterType="TodoDo" keyProperty="todoId" useGeneratedKeys="true">
        insert into t_todo(user_id, plan_consumed, todo_time, event_msg)
        values (#{userId}, #{planConsumed}, #{todoTime}, #{eventMsg})
    </insert>
    <delete id="deleteById">
        delete
        from t_todo
        where todo_id = #{todoId}
    </delete>
    <delete id="deleteAll" parameterType="String">
        delete from t_todo where user_id=#{userId}
    </delete>

</mapper>