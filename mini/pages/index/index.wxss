
.cell {
  display: flex;
  padding: 15rpx;
  border-bottom: 1rpx solid #ebedf0;
  background: #FFFFFF;
}

.cell__hd {
  display: block;
  top: 50%;
  transform: translateY(50%);
  width: 20rpx;
  height: 20rpx;
  margin: 0 13rpx;
  border-radius: 50%;
  border: 3rpx solid var(--weui-BRAND)
}

.cell__bd {
  flex: 1;
}
.cell__des{
  width:15%;
  background-color: #ffffff;
}
.cell__des .consumed{
  color: var(--weui-BRAND);
  text-align: center;
}
.cell__bd .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
  margin: 0 auto;
}

.cell__bd .des {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  color: #666666;
  font-size: 24rpx;
}